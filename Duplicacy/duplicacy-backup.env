# Duplicacy Backup Configuration
# Copy this file to .env and configure your settings

# Basic Settings
MACHINE_ID=dokploy-cluster
ADMIN_PASSWORD=your-secure-password-here

# Storage Configuration
# Options: local, s3, gcs, azure, b2, sftp
STORAGE_TYPE=local

# === AWS S3 Configuration (if using S3) ===
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-backup-bucket

# === Google Cloud Storage Configuration (if using GCS) ===
# Place your service account key file at /srv/appdata/duplicacy/credentials/gcs-key.json
# GCS_BUCKET=your-backup-bucket

# === Azure Blob Storage Configuration (if using Azure) ===
# AZURE_STORAGE_ACCOUNT=your-storage-account
# AZURE_STORAGE_KEY=your-storage-key
# AZURE_CONTAINER=your-container-name

# === Backblaze B2 Configuration (if using B2) ===
# B2_ACCOUNT_ID=your-account-id
# B2_ACCOUNT_KEY=your-account-key
# B2_BUCKET=your-backup-bucket

# === SFTP Configuration (if using SFTP) ===
# SFTP_HOST=your-sftp-server.com
# SFTP_USER=your-username
# SFTP_PASSWORD=your-password
# SFTP_PORT=22
# SFTP_PATH=/path/to/backup/directory

# === OneDrive Configuration (if using OneDrive) ===
# ONEDRIVE_TOKEN_FILE=/config/onedrive-token

# === Dropbox Configuration (if using Dropbox) ===
# DROPBOX_TOKEN=your-dropbox-token

# === Local Storage Configuration ===
# This is the default - backups stored on NFS mount
LOCAL_STORAGE_PATH=/srv/backups/duplicacy

# === Backup Schedule Configuration ===
# These can be configured in the web UI, but you can pre-set them here
BACKUP_SCHEDULE_APPDATA=0 2 * * *    # Daily at 2 AM
BACKUP_SCHEDULE_MEDIA=0 3 * * 0      # Weekly on Sunday at 3 AM
BACKUP_RETENTION_DAYS=30
BACKUP_RETENTION_WEEKS=12
BACKUP_RETENTION_MONTHS=12

# === Notification Settings ===
# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=admin@cooked.beer

# Webhook notifications (optional)
WEBHOOK_URL=https://your-webhook-url.com/webhook

# === Advanced Settings ===
# Compression level (0-9, higher = better compression but slower)
COMPRESSION_LEVEL=3

# Number of threads for backup operations
BACKUP_THREADS=4

# Chunk size in KB (default: 4096)
CHUNK_SIZE=4096

# Enable deduplication across repositories
GLOBAL_DEDUP=true
